    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tarif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for oeuvre in oeuvres %}
            <tr>
                <td>{{ oeuvre.id }}</td>
                <td>{{ oeuvre.tarif }}</td>
                <td>
                    <a href="{{ path('oeuvres_show', {'id': oeuvre.id}) }}">show</a>
