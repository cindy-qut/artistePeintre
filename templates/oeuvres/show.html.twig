{% extends 'base.html.twig' %}

{% block title %}Oeuvres{% endblock %}

{% block body %}
    <h1>Oeuvres</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ oeuvre.id }}</td>
            </tr>
            <tr>
                <th>Tarif</th>
                <td>{{ oeuvre.tarif }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ oeuvre.taille.dimensions }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if oeuvre.image %}<img src="{{ asset(oeuvre.image.imagePath)}}" height="100px" width="100px">{% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('oeuvres_index') }}">back to list</a>

    <a href="{{ path('oeuvres_edit', {'id': oeuvre.id}) }}">edit</a>

    {{ include('oeuvres/_delete_form.html.twig') }}
{% endblock %}
