{% extends 'base.html.twig' %}

{% block title %}Langue index{% endblock %}

{% block body %}
<div class="container">
    <h1>Langue index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for langue in langues %}
            <tr>
                <td>{{ langue.id }}</td>
                <td>{{ langue.nom }}</td>
                <td>
                    <a href="{{ path('langue_show', {'id': langue.id}) }}">show</a>
                    <a href="{{ path('langue_edit', {'id': langue.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('langue_new') }}">Create new</a>
</div>
{% endblock %}
