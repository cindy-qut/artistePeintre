<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block nav %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="">Accueil</a>
                <button class="navbar-toggler"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item {% if navactualite is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('actualite_homepage') }}">Actualité <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item {% if navarticle is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('article_homepage') }}">Articles</a>
                        </li>
                        <li class="nav-item {% if navcontact is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('contact_homepage') }}">Contact</a>
                        </li>
                        <li class="nav-item{% if navimage is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('image_homepage') }}">Images</a>
                        </li>
                        <li class="nav-item {% if navlangue is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('langue_homepage') }}">Langue</a>
                        </li>
                        <li class="nav-item {% if navoeuvre is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('oeuvre_homepage') }}">Oeuvres</a>
                        </li>
                        <li class="nav-item {% if navpresentation is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('presentation_homepage') }}">Presentation</a>
                        </li>
                        <li class="nav-item {% if navtaille is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('taille_homepage') }}">Taille</a>
                        </li>
                        <li class="nav-item {% if navtype is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('type_homepage') }}">Types</a>
                        </li>
                        <li class="nav-item {% if navtype is defined %}active{% endif %}">
                            {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                                <a class="nav-link" href="{{ path("fos_user_security_logout") }}">Déconnexion</a>
                            {% else %}
                                <a class="nav-link" href="{{ path("fos_user_security_login") }}">Connexion</a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </nav>

        {% endblock %}

        {% block body %}
        {% endblock %}
        <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
        <script src="{{ asset('assets/js/popper.min.js') }}"></script>
        <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
