{% extends 'base.html.twig' %}

{% block title %}Images{% endblock %}

{% block body %}
    <h1>Images</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ image.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset(image.imagePath) }}" height="100px" width="100px"></td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ image.path }}</td>
            </tr>
            <tr>
                <th>Image_path</th>
                <td>{{ image.imagePath }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('images_index') }}">back to list</a>

    <a href="{{ path('images_edit', {'id': image.id}) }}">edit</a>

    {{ include('images/_delete_form.html.twig') }}
{% endblock %}
