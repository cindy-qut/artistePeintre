{% extends 'base.html.twig' %}

{% block title %}Types index{% endblock %}

{% block body %}
    <div class="container">
    <h1>Types index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.id }}</td>
                <td>{% if type.image %}<img src="{{ asset(type.image.imagePath)}}" height="100px" width="100px">{% endif %}</td>
                <td>
                    <a href="{{ path('types_show', {'id': type.id}) }}">show</a>
                    <a href="{{ path('types_edit', {'id': type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('types_new') }}">Create new</a>
    </div>
{% endblock %}
